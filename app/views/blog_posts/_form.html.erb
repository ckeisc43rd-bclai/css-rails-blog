<div>
    <%= form_with model: blog_post do |form| %>
        <% if form.object.errors.any? %>
            <div>
                <% form.object.errors.full_messages.each do |message| %>
                    <div>
                        <%= message %>
                    </div>
                <% end %>
            </div>
        <% end %>
    <div>
        <div>
            <%= form.label :title %>
        </div>
        <div>
            <%= form.text_field :title %>
        </div>
    </div>
    <div>
        <div>
            <%= form.label :body %>
        </div>
        <div>
            <%= form.text_area :body %>
        </div>
    </div>
    <%= form.button %>
    <% end %>
</div>